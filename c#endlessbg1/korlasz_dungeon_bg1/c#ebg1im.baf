/* Korlasz defeated, final dialogue in bd0120.are exit */
IF
	Global("bd_Imoen_farewell","bd0120",0)
	OR(2)
		Dead("bdkorlas")  // Korlasz
		Global("BD_KORLASZ_SURRENDER","GLOBAL",1)
	AreaCheck("bd0120")
	InParty(Myself) 
	See(Player1) 
	!StateCheck(Myself,CD_STATE_NOTVALID)
	!StateCheck(Player1,CD_STATE_NOTVALID)
	CombatCounter(0)
	Global("C#EBG1_ImoenFinalDialog","GLOBAL",0)
	Range(Player1,20)
	Range("Rope",25)
THEN
	RESPONSE #100
		SetGlobal("C#EBG1_ImoenFinalDialog","GLOBAL",1)
END

IF
	InParty(Myself) 
	See(Player1) 
	!StateCheck(Myself,CD_STATE_NOTVALID)
	!StateCheck(Player1,CD_STATE_NOTVALID)
	Global("C#EBG1_ImoenFinalDialog","GLOBAL",1)
THEN
	RESPONSE #100
		StartDialogOverride("bdimoen",Player1)
END


